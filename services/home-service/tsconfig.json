{
  "extends": "@yukikaze/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "verbatimModuleSyntax": false,
    "target": "es2020",
    "module": "node20",
    "moduleResolution": "node16"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}