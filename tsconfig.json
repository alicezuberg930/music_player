{
  "compilerOptions": {
    "target": "es2020",
    "module": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
  },
  "include": [
    "src/**/*.ts",
    "src/drizzle.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}