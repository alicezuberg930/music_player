{
  "name": "yukikaze-music",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alicezuberg930/music_player.git"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "bugs": {
    "url": "https://github.com/alicezuberg930/music_player/issues"
  },
  "catalog": {
    "@tanstack/react-query": "^5.90.11",
    "typescript": "5.9.2",
    "tsdown": "^0.17.2",
    "@types/node": "^24.9.1",
    "eslint": "^9.36.0"
  },
  "catalogs": {
    "express": {
      "express": "^5.1.0",
      "@types/express": "^5.0.4",
      "express-rate-limit": "^7.0.0"
    },
    "tailwind": {
      "@tailwindcss/vite": "^4.1.15",
      "tailwindcss": "^4.1.15"
    },
    "react": {
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "@types/react": "^19.1.16",
      "@types/react-dom": "^19.1.9"
    },
    "multer": {
      "multer": "^2.0.2",
      "@types/multer": "^2.0.0"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://tien-music-player.site",
  "packageManager": "bun@1.3.4",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@yukikaze/web",
    "build:packages": "turbo run build --filter=@yukikaze/lib --filter=@yukikaze/ui --filter=@yukikaze/db --filter=@yukikaze/email --filter=@yukikaze/middleware --filter=@yukikaze/redis",
    "build:services": "turbo run build --filter=@yukikaze/playlist-service --filter=@yukikaze/gateway-service --filter=@yukikaze/home-service --filter=@yukikaze/song-service --filter=@yukikaze/artist-service --filter=@yukikaze/banner-service --filter=@yukikaze/user-service --filter=@yukikaze/auth-service",
    "clean:workspaces": "turbo run clean",
    "db:generate": "turbo run db:generate -F @yukikaze/db",
    "db:migrate": "turbo run db:migrate -F @yukikaze/db",
    "db:studio": "turbo run db:studio -F @yukikaze/db",
    "deps:bump": "bunx npm-check-updates --deep -u && bun install",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@yukikaze/web",
    "dev:services": "turbo run dev --filter=@yukikaze/playlist-service --filter=@yukikaze/gateway-service --filter=@yukikaze/home-service --filter=@yukikaze/song-service --filter=@yukikaze/artist-service --filter=@yukikaze/banner-service --filter=@yukikaze/user-service --filter=@yukikaze/auth-service",
    "dev:packages": "turbo run dev --filter=@yukikaze/lib --filter=@yukikaze/ui --filter=@yukikaze/db --filter=@yukikaze/email --filter=@yukikaze/middleware --filter=@yukikaze/validator",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run start --filter=@yukikaze/web --filter=@yukikaze/playlist-service --parallel",
    "start:web": "turbo run start --filter=@yukikaze/web",
    "start:services": "turbo run start --filter=@yukikaze/playlist-service --filter=@yukikaze/gateway-service --filter=@yukikaze/home-service --filter=@yukikaze/song-service --filter=@yukikaze/artist-service --filter=@yukikaze/banner-service --filter=@yukikaze/user-service --filter=@yukikaze/auth-service"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ]
}